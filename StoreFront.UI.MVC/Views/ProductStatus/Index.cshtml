@model IEnumerable<StoreFront.DATA.EF.Models.ProductStatus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBackOrdered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDiscontinued)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBackOrdered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDiscontinued)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductStatusId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductStatusId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductStatusId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
